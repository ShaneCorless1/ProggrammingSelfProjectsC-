<Window x:Class="WpfApp1.EditContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EditContact" Height="450" Width="350">
    <Grid>
        
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextBox" Margin="0,0,0,10"></TextBox>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"></TextBox>
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,5"></TextBox>
            <Button x:Name="UpdateButton" Margin="5,5,5,5" Content="Update" Click="UpdateButton_Click"/>
            <Button x:Name="DeleteButton" Margin="5,5,5,5" Content="Delete" Background="#FFFB1616" Click="DeleteButton_Click" />
        </StackPanel>

    </Grid>
</Window>
